<h3><%= __('ACCOUNTADD_header')%></h3>
<br>
<% if ( locals.messages.error ) { %>
    <div class="flash alert alert-danger" role="alert"><%= locals.messages.error %></div>
<% } %>
<form id="user-add-form" method="post" action="/backend/account/add">
	<table>
		<tr>
			<th><label><%= __('ACCOUNTADD_formUsername')%></label></th>
			<th><input name="username" type='text'></input></th>
		</tr>
		<tr>
			<th><label><%= __('ACCOUNTADD_formPassword')%></label></th>
			<th><input name="password" type='password'></input></th>
		</tr>
        <tr>
			<th><label><%= __('ACCOUNTADD_formEmail')%></label></th>
			<th><input name="email" type='email'></input></th>
		</tr>
		<tr>
			<th><label><%= __('ACCOUNTADD_formType')%></label></th>
			<th>
				<select form="user-add-form" class="selectType" data-style="btn-info" name="selectType">
			        <optgroup label="type's ">
			            <option name="normal" value="normal">normal</option>
                        <option name="supervisor" value="supervisor">supervisor</option>
			            <option name="admin" value="admin">admin</option>
			        </optgroup>
			    </select>
		    </th>
		</tr>
		<tr>
			<th></th>
			<th><input type='submit' value="<%= __('ACCOUNTADD_formSubmit')%>"></input></th>
		</tr>
	</table>
</form>
