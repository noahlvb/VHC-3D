 <h2>account management <button type="button" class="btn btn-default" onclick="window.location.href='/admin/account/add'">add user</button></h2>
<div class="panel panel-default">
	<div class="panel-heading">user's</div>
	<table id="user-table" class="table">
	</table>
</div>

<script type="text/javascript">
	$.ajax({
		dataTypeL: "json",
		url: "/backend/account/list",
		beforeSend: function( xhr ) {
		    xhr.overrideMimeType( "text/plain; charset=x-user-defined" );
		}
	}).done(function (data) {
		var users = $.parseJSON(data);
		draw_table_users(users);
	});

	function draw_table_users (users) {
		var table = document.getElementById('user-table');
		var row0 = table.insertRow(0);
		row0.insertCell(0).innerHTML = '<b>username</b>';
		row0.insertCell(1).innerHTML = '<b>type</b>';
		row0.insertCell(2).innerHTML = '<b>actions</b>';
		for (var i = 0; i < Object.keys(users).length; i++) {
			var row = table.insertRow(1);
			row.insertCell(0).innerHTML = '<a href="/admin/account/profile/' + users[i].id + '/">' + users[i].username + '</a>';
			row.insertCell(1).innerHTML = users[i].type;
			row.insertCell(2).innerHTML = '<a href="/backend/account/del/' + users[i].id + '/">delete</a>';
		}
	}
</script>